<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/choose_methodImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/choose_method_banner_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="top"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/choose_method_touch" />

    <TextView
        android:id="@+id/choose_method_titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/choose_method_description_padding"
        android:paddingRight="@dimen/choose_method_description_padding"
        android:text="@string/choose_method_title_touch"
        android:textAllCaps="true"
        android:paddingTop="32dp"
        android:textColor="@color/choose_method_titleColor"
        android:textSize="@dimen/choose_method_title_text_size" />

    <TextView
        android:id="@+id/choose_method_descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:paddingTop="16dp"
        android:paddingLeft="@dimen/choose_method_description_padding"
        android:paddingRight="@dimen/choose_method_description_padding"
        android:text="@string/choose_method_description_touch"
        android:textAlignment="center"
        android:textColor="@color/choose_method_descriptionColor"
        android:textSize="@dimen/choose_method_description_text_size" />


</LinearLayout>
